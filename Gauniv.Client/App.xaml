<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Gauniv.Client.Converters"
             xmlns:local="clr-namespace:Gauniv.Client"
             x:Class="Gauniv.Client.App">
    <Application.Resources>
        <ResourceDictionary>
            <converters:BoolToFlyoutBehaviorConverter x:Key="BoolToFlyoutBehaviorConverter"/>
            <converters:BoolToEditButtonTextConverter x:Key="BoolToVisibilityConverter"/>
            <converters:BoolToStringConverter x:Key="BoolToStringConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
