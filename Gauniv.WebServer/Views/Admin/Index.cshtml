@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h2>Gérer les utilisateurs</h2>

<a asp-action="Create" class="btn btn-primary">Ajouter un utilisateur</a>

<table class="table">
    <thead>
        <tr>
            <th>Nom d'utilisateur</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Supprimer</a>
                    <a asp-action="ManageRoles" asp-route-id="@user.Id" class="btn btn-secondary">Gérer les rôles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
