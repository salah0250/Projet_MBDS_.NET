@model Gauniv.WebServer.Data.User

<div class="card">
    <div class="card-header">
        <h2>Modifier un utilisateur</h2>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="FirstName" class="control-label">Prénom</label>
                        <input asp-for="FirstName" class="form-control" required />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="LastName" class="control-label">Nom</label>
                        <input asp-for="LastName" class="form-control" required />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="UserName" class="control-label">Nom d'utilisateur</label>
                        <input asp-for="UserName" class="form-control" required />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" required type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <div class="custom-control custom-checkbox">
                    <input asp-for="EmailConfirmed" class="custom-control-input" />
                    <label asp-for="EmailConfirmed" class="custom-control-label">Email confirmé</label>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Validation personnalisée côté client
            $('form').submit(function(e) {
                var email = $('#Email').val();
                var username = $('#UserName').val();

                if (!email || !username) {
                    e.preventDefault();
                    alert('Le nom d\'utilisateur et l\'email sont requis.');
                }
            });
        });
    </script>
}