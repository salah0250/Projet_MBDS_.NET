@model Gauniv.WebServer.Data.Game
@using Gauniv.WebServer.Data


<h2>Ajouter un nouveau jeu</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Title">Nom du jeu</label>
        <input type="text" class="form-control" id="Title" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ReleaseDate">Date de sortie</label>
        <input type="date" class="form-control" id="ReleaseDate" asp-for="ReleaseDate" />
        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Price">Prix (€)</label>
        <input type="number" class="form-control" id="Price" asp-for="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <!-- Champ pour sélectionner la catégorie -->
    <!-- Autres champs -->
    <div class="form-group">
        <label for="Category">Catégorie</label>
        <select asp-for="Category" class="form-control" asp-items="Html.GetEnumSelectList<Category>()"></select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <!-- Champ pour uploader le binaire du jeu -->
    <div class="form-group">
        <label asp-for="Payload"></label>
        <input asp-for="Payload" type="file" class="form-control" name="file" />
        <span asp-validation-for="Payload" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
</form>
